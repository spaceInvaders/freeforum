@model FreeForum.ViewModels.Post.PostIndexModel

<h1 class="display-4">Welcome to FreeForum!</h1>
<p>You can create a new post or reply on existing one in case you are authorized</p>
<span id="headingBtn">
    <a asp-controller="Post"
       asp-action="Create"
       class="btn btn-newPost">
        Create Post
    </a>
</span>
    @if (Model.PostList.Any())
    {
        <table class="table table-bordered table-hover" id="postIndexTable">
            <tbody>
                @foreach (var post in Model.PostList)
                {
                    <tr>
                        <td>
                            <a asp-controller="Post" asp-action="PostDetaile" asp-route-id="@post.Id">
                                @post.Title
                            </a>
                        </td>
                        <td>
                            @post.Content
                        </td>
                        <td>
                            @post.UserName
                        </td>
                        <td>
                            @post.DateCreated
                        </td>
                        <td>
                            @post.RepliesCount
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="">
            <h3>
                We have no posts yet..
            </h3>
        </div>
    }



